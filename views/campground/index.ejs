<% include ../partials/header %>
<div class="container">
    <div class="jumbotron">
      <h1 class="display-4">Welcome to the YelpCamp!</h1>
      <p class="lead">Best places for camping all around world, find places by there pictures.</p>
      <hr class="my-4">
      <p>Please leave honest review and picture about camping place</p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add campgrounds</a>
    </div>
</div>
<div class="container">
    <div class="row">
	 <% campgrounds.forEach(function(campground){ %>
        <div class="col-lg-3 col-sm-6">

        <div class="border text-center">
            <img src="<%= campground.image %>" class="img-thumbnail">
            <h4><%= campground.name %></h4>
            <a class="btn btn-primary btn-md" href="/campgrounds/<%=campground._id%>">More Info.</a>
        </div>

        </div>
    <% }); %>
    </div>
</div>

<% include ../partials/footer %>






